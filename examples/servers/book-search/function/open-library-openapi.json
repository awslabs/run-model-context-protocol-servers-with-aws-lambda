{
  "openapi": "3.0.0",
  "info": {
    "title": "Open Library Search API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://openlibrary.org"
    }
  ],
  "paths": {
    "/search.json": {
      "get": {
        "summary": "Search for books",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Search query"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "start": {
                      "type": "integer"
                    },
                    "num_found": {
                      "type": "integer"
                    },
                    "docs": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": {
                            "type": "string"
                          },
                          "title": {
                            "type": "string"
                          },
                          "author_name": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "first_publish_year": {
                            "type": "integer"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
